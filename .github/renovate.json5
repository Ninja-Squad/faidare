{
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  // target chore/next branch
  "baseBranches": [
    "chore/next"
  ],
  // only 1 PR at the same time (to avoid cascading rebase)
  "prConcurrentLimit": 1,
  // auto-merge if build is OK
  "automerge": true
}
